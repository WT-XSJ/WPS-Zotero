<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" onLoad="OnAddinLoad">
    <ribbon startFromScratch="false">
        <tabs>
            <tab id="zoteroTab" label="Zotero">
                <group id="zoteroGroup" label="Zotero">
                    <button id="btnAddEditCitation" label="Add/Edit Citation" onAction="OnAction" getImage="GetImage" visible="true" size="large"/>
                    <button id="btnAddEditBib" label="Add/Edit Refs" onAction="OnAction" getImage="GetImage" visible="true" size="large"/>
                    <button id="btnRefresh" label="Refresh" onAction="OnAction" getImage="GetImage" visible="true" size="large"/>
                    <button id="btnPref" label="Preferences" onAction="OnAction" getImage="GetImage" visible="true"/>
                    <button id="btnAddNote" label="Add Note" onAction="OnAction" getImage="GetImage" visible="true"/>
                    <button id="btnUnlink" label="Unlink" onAction="OnAction" getImage="GetImage" visible="true"/>
                    <button id="btnExport" label="Export" onAction="OnAction" getImage="GetImage" visible="true"/>
                    <button id="btnTest" label="Test" onAction="OnAction" getImage="GetImage" visible="false" size="large"/>
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>